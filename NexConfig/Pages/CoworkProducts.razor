@page "/coworkproducts"

@using ApplicationCore.Entities
@inject ApplicationCore.Interfaces.INexudusService NexudusService

<h1>CoWork Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (CoWorkingProducts == null)
        {
        <tr>
            <td colspan="3">
                <p><em>Loading...</em></p>
            </td>
        </tr>
        }
        else if (CoWorkingProducts.Count() == 0)
        {
            <tr>
                <td colspan="3">
                    <span>No products retrieved defined yet...</span>
                </td>
            </tr>
        }
        else
        {
            foreach (var product in CoWorkingProducts)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {

    public IReadOnlyList<Product> CoWorkingProducts { get; set; }

    protected override async Task OnInitializedAsync()
    {
        CoWorkingProducts
            = await NexudusService.GetActiveProducts();
    }

}
